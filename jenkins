pipeline {
    agent any
    tools{
        maven "local--mvn"
    }
    stages{
        stage('Init'){
            steps{
                echo "Testing....."
            }
        }
        stage('Build'){
            steps {
                echo "Building....."
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'starting Archive...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
        stage('deploy'){
            steps{
                timeout(time:5,unit:"DAYS"){
                    input message:"Are u sure to deploy?"
                }
                echo "starting deploy"
                build job:"udemy-deploy-to-STG"
            }
            post{
                success{
                    echo "deploy success"
                }
                failure{
                    echo "deploy fail"
                }
            }
        }
    }
}